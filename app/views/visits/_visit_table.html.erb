<table>
  <thead>
    <tr>
      <th>Product Area</th>
      <th>Duration</th>
      <th>Enter time</th>
      <th>Exit time</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% visits.each do |visit| %>
      <tr>
        <td><%= visit.product_area.name %></td>
        <td><%= visit.duration %></td>
        <td><%= visit.enter_time %></td>
        <td><%= visit.exit_time || '-----' %></td>
      </tr>
    <% end %>
  </tbody>
  <%= 'Total duration: ' + visits.flat_map{|visit| visit.duration}.reduce(:+).to_s %>
</table>
